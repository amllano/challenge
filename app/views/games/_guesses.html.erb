<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th colspan="1"></th>
			<%  (1..10).each do |i| %>
				<th><%= i %></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% (1..10).each do |y| %>
			<tr id="guessY_<%= y %>">
				<td><%= y %></td>
				<% (1..10).each do |x| %>					
					<% @guess = find_guess(x, y, @game.guesses) %>
					<% unless @guess %>
						<td id="guessX_<%= x %>" class="text-center" colspan="1"></td>
					<% else %>
						<td id="guessX_<%= x %>" class="text-center"> <%= hit_or_miss(@guess.status) %></td>
					<% end %>
				<% end %>				
			</tr>
		<% end %>
	</tbody>
</table>