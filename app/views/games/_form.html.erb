<h2>Select coordinates and click fire!</h2>
<%= form_for([@game, @game.guesses.build], remote: true, :html => { :id => "guess_form", :class => "form-inline" }) do |f| %>
	<div class="form-group">
      <%= f.label :x %>: <%= f.number_field :x, :class=>"form-control", :min=>1, :max=>10, disabled: !@game.turn?  %>
    </div>
    <div class="form-group">
      <%= f.label :y %>: <%= f.number_field :y, :class=>"form-control", :min=>1, :max=>10, disabled: !@game.turn?  %>
    </div>
    <div class="form-group">    
    	<%= f.submit 'Fire!', :class=>"btn btn-success", disabled: !@game.turn? %>    
	</div>    	
<% end %>